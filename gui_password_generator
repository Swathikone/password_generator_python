from tkinter import *
import random
import string

# Function to generate password
def generate_password():
    # Get input from the Entry widgets
    no_letters = int(e1.get())
    no_int = int(e2.get())
    no_char = int(e3.get())

    # Generate password
    password = (
        random.choices(string.ascii_letters, k=no_letters) +
        random.choices(string.digits, k=no_int) +
        random.choices(string.punctuation, k=no_char)
    )
    random.shuffle(password)  # Shuffle the characters to make the password more random
    ans = "".join(password)
    
    # Display the generated password in the label
    result_label.config(text="Generated Password: " + ans)

# Create the main window
master = Tk()

master.title("GeneratePassword.com")
master.geometry('500x500')

# Labels and Entry widgets for input
Label(master, text="Password Generator").grid(row=0, columnspan=2)

Label(master, text='How many letters in password: ').grid(row=1, sticky=E)
Label(master, text='How many numbers in password: ').grid(row=2, sticky=E)
Label(master, text='How many special characters in password: ').grid(row=3, sticky=E)

e1 = Entry(master)
e2 = Entry(master)
e3 = Entry(master)

e1.grid(row=1, column=1)
e2.grid(row=2, column=1)
e3.grid(row=3, column=1)

# Button to generate password
Button(master, text="Generate Password", width=25, command=generate_password).grid(row=4, columnspan=2)

# Label to display the generated password
result_label = Label(master, text="")
result_label.grid(row=5, columnspan=2)

# Run the application
master.mainloop()
